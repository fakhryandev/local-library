extends layout

block content
  h1 #{ title }: #{ book.title }
  p= book.summary
    if book_instance.length
      p #[strong Delete the following book instance before attempting to delete this book.]

      div(style="margin-left: 20px; margin-top: 20px")
      h4 Book Instances

      dl 
      each book in book_instance
        dt
          a(href=book.url) #{ bookinstance.imprint }
        dd #{ bookinstance.due_back_formatted }
    else
      p Do you really want to delete this Book ?

      form(action="", method="post") 
      .form-group
        input#bookid.form-control(
          type="hidden",
          name="bookid",
          required="true",
          value=book._id
        )
        button.btn.btn-primary(type="submit") Delete
